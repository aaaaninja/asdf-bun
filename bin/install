#!/usr/bin/env bash

set -eo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

function install_version() {
  local version=$1
  local install_path=$2

  local platform
  platform=$(get_platform)

  local arch
  arch=$(get_arch)

  local bin_url
  bin_url=$(get_bin_url "$version" "$platform" "$arch")

  local tmpdir
  tmpdir=$(get_temp_dir)
  trap "rm -rf $tmpdir" EXIT

  (
    mkdir -p "$install_path/bin"

    echo "Installing Bun v$version..."
    curl -sSfLo "$tmpdir/bun.zip" "$bin_url" || fail "Couldn't download the Bun binary from $bin_url"
    unzip -q -j "$tmpdir/bun.zip" "bun-$platform-$arch/bun" -d "$install_path/bin"

    chmod +x "$install_path/bin/bun"

    echo "Bun v$version is installed successfully!"
  ) || (rm -rf "$install_path"; exit 1)
}

if [ "$ASDF_INSTALL_TYPE" != "version" ]; then
  fail "asdf-bun currently supports release install only"
fi

install_version "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
